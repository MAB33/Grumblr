<h1>User</h1>
<h3>Username: <%= @user.username %></h3>
<ul>
	<li>Location: <%= @user.location %></li>
	<li>Bio: <%= @user.bio %></li>
</ul>
<% if @user.id == current_user.id %>
	<p><%= link_to "Edit Profile", edit_user_path(@user)%></p>
<% else %>
<%end%>
<br>
<h3><%= "#{@user.username}'s Posts" %></h3>
<ul>
	<% @user.posts.each do |post| %> <!-- there is an activerecord method that allows you to use user.chirps -->
	<li><%= post.body %> (<%= link_to "X", post_path(post), method: "delete" %>)</li>
	<% end %>
</ul>

<h1>New Post</h1>
<%= form_for(@post) do |f| %>
	<%= f.label :body %><br />
	<%= f.text_area :body %><br />
	<%= f.submit :post %>
<% end %>

