<h1>Create a Grumblr Account</h1>
<%= form_for(@user) do |f| %>
	<%= f.label "Username" %><br>
	<%= f.text_field :username %><br>
	<%= f.label "First Name" %><br>
	<%= f.text_field :fname %><br>
	<%= f.label "Last Name" %><br>
	<%= f.text_field :lname %><br>
	<%= f.label :email %><br>
	<%= f.text_field :email %><br>
	<%= f.label :location %><br>
	<%= f.text_field :location %><br>
	<%= f.label :bio %><br>
	<%= f.text_area :bio %><br>
	<%= f.label :password %><br>
	<%= f.password_field :password %><br><br>
	<%= f.submit :create %>
<% end %>
<br><br>
<%= link_to "Back", :back %>