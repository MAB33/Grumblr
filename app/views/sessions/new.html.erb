<div id="homeContainer">
	<div id="loginForm">
		<%= image_tag("grumblr.png", :alt => "logo") %>
		<%= form_tag('sessions', method: 'post') do %>
		<!-- label_tag(:username, "Username:") -->
		<%= text_field_tag(:username, nil, placeholder: "username")%><br/>
		<!-- label_tag(:password, "Password:") -->
		<%= password_field_tag(:password, nil, placeholder: "password")%><br/>
		<%= submit_tag "login"%>
	<% end %>
	<p style="font-size:.8em; color:black;">Not a member yet? <%= link_to "Join here.", new_user_path %></p>
	</div>
</div>
